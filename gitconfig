    lola = log --graph --decorate --abbrev-commit --pretty=oneline --all
    lolv = log --graph --all --color --pretty='%x09%C(yellow)%h %Cgreen%ci %Cblue%cn%x09%Creset%s %Cred%d%Creset'
    wdiff = diff --color-words
    wshow = show --color-words

